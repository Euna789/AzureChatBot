
/*
수정사항 : choiceSet을 여러개 넣으면 id를 동일하게 쓸 수 없음, 한글이 안됨
*/

{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "actions": [
    {
      "type": "Action.ShowCard",
      "card": {
        "type": "AdaptiveCard",
        "actions": [
          {
            "type": "Action.ShowCard",
            "card": {
              "type": "AdaptiveCard",
              "body": [
                {
                  "type": "Input.ChoiceSet",
                  "id": "center",
                  "choices": [
                    {
                      "title": "A center",
                      "value": "A center"
                    },
                    {
                      "title": "B center",
                      "value": "B Center"
                    }
                  ],
                  "value": "A center"
                }
              ],
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "OK"
                }
              ]
            },
            "title": "gangnam"
          },
          {
            "type": "Action.ShowCard",
            "title": "not yet",
            "card": {
              "type": "AdaptiveCard"
            }
          }
        ]
      },
      "title": "seoul"
    },
    {
      "type": "Action.ShowCard",
      "card": {
        "type": "AdaptiveCard"
      },
      "title": "not yet "
    }
  ]
